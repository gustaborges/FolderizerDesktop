<UserControl x:Class="FolderizerDesktop.CustomControls.Steps.StepDefinition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal" >
        <StackPanel VerticalAlignment="Center">
            <Border x:Name="StepCircle" Width="25" Height="25" CornerRadius="50" BorderThickness="1" BorderBrush="{DynamicResource PrimaryHueMidBrush}">
                <Label x:Name="StepNumberLabel" Content="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}" FontFamily="{StaticResource RobotoMedium}" FontSize="{DynamicResource StepControlFontSize}" ></Label>
            </Border>
            <Label x:Name="StepNameLabel"  Content="Step Name" HorizontalAlignment="Center" FontFamily="{StaticResource RobotoMedium}" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="{DynamicResource StepControlFontSize}"></Label>
        </StackPanel>

        <Rectangle x:Name="ConnectorToNextStep" VerticalAlignment="Center" Width="100" Height="1" Fill="{DynamicResource UntraveledConnectorBrush}"/>

    </StackPanel>
</UserControl>
